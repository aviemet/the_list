{
  "name": "the_list",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "private": true,
  "packageManager": "yarn@4.10.3",
  "type": "module",
  "scripts": {
    "start": "dotenv -e .env.production expo start",
    "start:dev": "dotenv -e .env.local expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "expo lint",
    "supabase": "supabase start",
    "db:stop": "supabase stop",
    "db:reset": "supabase db reset",
    "db:migration:new": "supabase migration new",
    "db:migration:up": "supabase db push",
    "db:link": "supabase link",
    "db:pull": "supabase db pull",
    "db:studio": "open http://127.0.0.1:54323",
    "functions:serve": "supabase functions serve",
    "functions:deploy": "supabase functions deploy",
    "dev": "concurrently -n supabase,expo -c blue,green \"yarn supabase\" \"yarn start:dev\""
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.2",
